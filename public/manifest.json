{
    "manifest_version": 3,
    "name": "My React Extension",
    "description": "A simple React Chrome extension",
    "version": "1.0",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "tabs"
    ],
    "icons": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png"
    },
    "host_permissions": [
      "http://*/*", "https://*/*"
    ],
    "action": {
      "default_icon": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png"
      }
    }
  }
  